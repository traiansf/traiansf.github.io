%----------------------------------------------------------------------------------------------------------------------------------

% beamer specific options

               \mode<presentation>%refers to the first four modes (beamer,handout,second and trans). That is, to all modes except the article mode
{

%----------------------------------------------------------------------------------------------------------------------------------

% colors
%% defining colors

               \definecolor{beamer@barcolor}{rgb}{1,1,1}% orange
               \definecolor{beamer@normaltextcolor}{rgb}{1,1,1}% gray blue
               \definecolor{beamer@frametitlecolor}{rgb}{1,1,1}% light blue
               \definecolor{beamer@headercolor}{rgb}{1,1,1} % dark blue
               \definecolor{beamer@night}{rgb}{1,1,1} % black



%% setting the above deffinitions

               \setbeamercolor{structure}{fg=beamer@headercolor}
               \setbeamercolor{normal text}{fg=beamer@normaltextcolor}
               \setbeamercolor{frametitle}{fg=beamer@frametitlecolor,bg=white}
               \setbeamercolor{Pi2}{fg=beamer@barcolor,bg=beamer@frametitlecolor}
}

\mode<all>